@{
    ViewBag.Title = "Account Locked";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-lock fa-5x text-warning mb-4"></i>
                <h1 class="display-4 text-warning">Account Locked</h1>
                <h2 class="mb-4">Too many failed attempts</h2>
                <p class="lead text-muted mb-4">
                    Your account has been temporarily locked due to multiple failed login attempts.
                    Please try again later or contact your administrator.
                </p>
                
                <div class="d-flex gap-2 justify-content-center">
                    @Html.ActionLink("Try Again", "Login", "Account", null, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-outline-secondary" })
                </div>
            </div>
        </div>
    </div>
</div>
