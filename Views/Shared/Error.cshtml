@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-exclamation-triangle fa-5x text-danger mb-4"></i>
                <h1 class="display-4 text-danger">Oops!</h1>
                <h2 class="mb-4">Something went wrong</h2>
                <p class="lead text-muted mb-4">
                    We're sorry, but an error occurred while processing your request.
                </p>
                
                @if (Model != null && HttpContext.Current.IsDebuggingEnabled)
                {
                    <div class="alert alert-danger text-left">
                        <h5>Error Details:</h5>
                        <p><strong>Controller:</strong> @Model.ControllerName</p>
                        <p><strong>Action:</strong> @Model.ActionName</p>
                        <p><strong>Exception:</strong> @Model.Exception.Message</p>
                    </div>
                }
                
                <div class="d-flex gap-2 justify-content-center">
                    <a href="javascript:history.back()" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left"></i> Go Back
                    </a>
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</div>
