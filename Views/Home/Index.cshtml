@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome to Attendance System</h1>
    <p class="lead">A comprehensive time-based attendance tracking system for educational institutions.</p>
    <p>@Html.ActionLink("Get Started", "Login", "Account", null, new { @class = "btn btn-primary btn-lg" })</p>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-clock fa-3x text-primary mb-3"></i>
                <h4>Time-Based Tracking</h4>
                <p>Automatically track when students leave and return, with 5-minute grace period for marking absent.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x text-success mb-3"></i>
                <h4>Role-Based Access</h4>
                <p>Different dashboards for Students, Teachers, and Administrators with appropriate permissions.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-chart-bar fa-3x text-info mb-3"></i>
                <h4>Comprehensive Reports</h4>
                <p>Generate detailed attendance reports and export data in CSV format for analysis.</p>
            </div>
        </div>
    </div>
</div>
