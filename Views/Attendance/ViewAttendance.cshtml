@model AttendanceSystem.Controllers.ViewAttendanceViewModel
@{
    ViewBag.Title = "View Attendance - " + Model.Class.Name;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-chart-line"></i> Attendance Report - @Model.Class.Name</h2>
    <div>
        <button type="button" class="btn btn-outline-primary" onclick="exportReport()">
            <i class="fas fa-download"></i> Export CSV
        </button>
        @Html.ActionLink("Back to Classes", "Index", "Attendance", null, new { @class = "btn btn-secondary" })
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Filter Report</h5>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("ViewAttendance", "Attendance", new { classId = Model.Class.Id }, FormMethod.Get, new { @class = "form-inline" }))
                {
                    <div class="row w-100">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">From Date</label>
                                <input type="date" name="fromDate" class="form-control" value="@Model.FromDate.ToString("yyyy-MM-dd")" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">To Date</label>
                                <input type="date" name="toDate" class="form-control" value="@Model.ToDate.ToString("yyyy-MM-dd")" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i> Filter
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Summary Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="stats-card">
                            <div class="stats-number text-success">@Model.Stats.GetValueOrDefault("Present", 0)</div>
                            <div class="stats-label">Present</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card">
                            <div class="stats-number text-warning">@Model.Stats.GetValueOrDefault("Left", 0)</div>
                            <div class="stats-label">Left</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card">
                            <div class="stats-number text-info">@Model.Stats.GetValueOrDefault("Returned", 0)</div>
                            <div class="stats-label">Returned</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card">
                            <div class="stats-number text-danger">@Model.Stats.GetValueOrDefault("Absent", 0)</div>
                            <div class="stats-label">Absent</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    Detailed Attendance Report
                    <small class="text-muted">(@Model.FromDate.ToString("MMM dd") - @Model.ToDate.ToString("MMM dd, yyyy"))</small>
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Attendance.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Student Name</th>
                                    <th>Student ID</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Left At</th>
                                    <th>Returned At</th>
                                    <th>Marked Absent At</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var record in Model.Attendance.OrderBy(a => a.Student.FullName).ThenBy(a => a.Date))
                                {
                                    <tr>
                                        <td>
                                            <strong>@record.Student.FullName</strong>
                                        </td>
                                        <td>@record.Student.StudentId</td>
                                        <td>
                                            <strong>@record.Date.ToString("MMM dd, yyyy")</strong><br>
                                            <small class="text-muted">@record.Date.ToString("dddd")</small>
                                        </td>
                                        <td>
                                            <span class="status-badge status-@record.Status.ToString().ToLower()">
                                                @record.StatusText
                                            </span>
                                        </td>
                                        <td>
                                            @if (record.LeftAt.HasValue)
                                            {
                                                <span class="text-warning">@record.LeftAt.Value.ToString("HH:mm")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (record.ReturnedAt.HasValue)
                                            {
                                                <span class="text-info">@record.ReturnedAt.Value.ToString("HH:mm")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (record.MarkedAbsentAt.HasValue)
                                            {
                                                <span class="text-danger">@record.MarkedAbsentAt.Value.ToString("HH:mm")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(record.Notes))
                                            {
                                                <small class="text-muted">@record.Notes</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-clipboard fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No Attendance Records Found</h5>
                        <p class="text-muted">No attendance records found for the selected date range.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function exportReport() {
            var fromDate = '@Model.FromDate.ToString("yyyy-MM-dd")';
            var toDate = '@Model.ToDate.ToString("yyyy-MM-dd")';
            var classId = @Model.Class.Id;
            
            window.open('@Url.Action("Export", "Attendance")' + '?classId=' + classId + '&fromDate=' + fromDate + '&toDate=' + toDate, '_blank');
        }
    </script>
}
