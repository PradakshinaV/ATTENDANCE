@model IEnumerable<AttendanceSystem.Models.Class>
@{
    ViewBag.Title = "Classes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-chalkboard"></i> My Classes</h2>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var classItem in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@classItem.Name</h5>
                        <span class="badge bg-primary">@classItem.Subject</span>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <i class="fas fa-map-marker-alt"></i> Room: @classItem.Room<br>
                            <i class="fas fa-clock"></i> Time: @classItem.ClassTime<br>
                            <i class="fas fa-users"></i> Students: @classItem.Students.Count
                        </p>
                        @if (!string.IsNullOrEmpty(classItem.Description))
                        {
                            <p class="card-text text-muted">@classItem.Description</p>
                        }
                    </div>
                    <div class="card-footer">
                        <div class="d-grid gap-2">
                            @Html.ActionLink("Mark Attendance", "MarkAttendance", new { classId = classItem.Id }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("View Reports", "ViewAttendance", new { classId = classItem.Id }, new { @class = "btn btn-outline-secondary" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-chalkboard fa-5x text-muted mb-3"></i>
        <h4 class="text-muted">No Classes Assigned</h4>
        <p class="text-muted">You don't have any classes assigned yet. Contact your administrator.</p>
    </div>
}
