@model AttendanceSystem.Models.Student
@{
    ViewBag.Title = "My Profile";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user"></i> My Profile</h2>
    <button type="button" class="btn btn-outline-primary" onclick="editProfile()">
        <i class="fas fa-edit"></i> Edit Profile
    </button>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Personal Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">First Name</label>
                            <p class="form-control-plaintext">@Model.FirstName</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">Last Name</label>
                            <p class="form-control-plaintext">@Model.LastName</p>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">Student ID</label>
                            <p class="form-control-plaintext">
                                <strong>@Model.StudentId</strong>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">Email</label>
                            <p class="form-control-plaintext">@Model.Email</p>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">Phone Number</label>
                            <p class="form-control-plaintext">@(Model.PhoneNumber ?? "Not provided")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">Status</label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-@(Model.IsActive ? "success" : "danger")">
                                    @(Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label text-muted">Member Since</label>
                    <p class="form-control-plaintext">@Model.CreatedDate.ToString("MMMM dd, yyyy")</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Class Information</h5>
            </div>
            <div class="card-body">
                @if (Model.Class != null)
                {
                    <div class="mb-3">
                        <label class="form-label text-muted">Class Name</label>
                        <p class="form-control-plaintext">
                            <strong>@Model.Class.Name</strong>
                        </p>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label text-muted">Subject</label>
                        <p class="form-control-plaintext">
                            <span class="badge bg-info">@Model.Class.Subject</span>
                        </p>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label text-muted">Room</label>
                        <p class="form-control-plaintext">@Model.Class.Room</p>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label text-muted">Class Time</label>
                        <p class="form-control-plaintext">@Model.Class.ClassTime</p>
                    </div>
                    
                    @if (Model.Class.Teacher != null)
                    {
                        <div class="mb-3">
                            <label class="form-label text-muted">Teacher</label>
                            <p class="form-control-plaintext">@Model.Class.Teacher.FirstName @Model.Class.Teacher.LastName</p>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Class.Description))
                    {
                        <div class="mb-3">
                            <label class="form-label text-muted">Description</label>
                            <p class="form-control-plaintext">@Model.Class.Description</p>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="fas fa-exclamation-triangle fa-2x text-warning mb-2"></i>
                        <p class="text-muted">No class assigned</p>
                    </div>
                }
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @Html.ActionLink("View Attendance History", "History", "Student", null, new { @class = "btn btn-outline-primary" })
                    @Html.ActionLink("Download Report", "Export", "Student", null, new { @class = "btn btn-outline-success" })
                    @Html.ActionLink("Change Password", "ChangePassword", "Manage", null, new { @class = "btn btn-outline-warning" })
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Profile Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Profile</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editProfileForm">
                    <div class="mb-3">
                        <label class="form-label">First Name</label>
                        <input type="text" class="form-control" id="firstName" value="@Model.FirstName" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="lastName" value="@Model.LastName" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" value="@Model.Email" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="phoneNumber" value="@Model.PhoneNumber" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveProfile()">Save Changes</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function editProfile() {
            $('#editProfileModal').modal('show');
        }
        
        function saveProfile() {
            // This would typically make an AJAX call to update the profile
            showAlert('Profile update feature coming soon!', 'info');
            $('#editProfileModal').modal('hide');
        }
    </script>
}
