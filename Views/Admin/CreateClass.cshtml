@model AttendanceSystem.Models.Class
@{
    ViewBag.Title = "Create Class";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="fas fa-chalkboard"></i> Create New Class</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("CreateClass", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Class Name" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                @Html.LabelFor(m => m.Subject, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @placeholder = "Subject" })
                                @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                @Html.LabelFor(m => m.Room, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Room, new { @class = "form-control", @placeholder = "Room Number" })
                                @Html.ValidationMessageFor(m => m.Room, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                @Html.LabelFor(m => m.StartTime, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.StartTime, new { @class = "form-control", @type = "time" })
                                @Html.ValidationMessageFor(m => m.StartTime, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                @Html.LabelFor(m => m.EndTime, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.EndTime, new { @class = "form-control", @type = "time" })
                                @Html.ValidationMessageFor(m => m.EndTime, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        @Html.LabelFor(m => m.TeacherId, new { @class = "form-label" })
                        @Html.DropDownListFor(m => m.TeacherId, (SelectList)ViewBag.Teachers, "Select Teacher", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.TeacherId, "", new { @class = "text-danger" })
                    </div>
                    
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Description, new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @rows = 3, @placeholder = "Class Description (Optional)" })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create Class
                        </button>
                        @Html.ActionLink("Cancel", "ManageClasses", "Admin", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
