@model IEnumerable<AttendanceSystem.Models.Class>
@{
    ViewBag.Title = "Manage Classes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-chalkboard"></i> Manage Classes</h2>
    @Html.ActionLink("Create New Class", "CreateClass", "Admin", null, new { @class = "btn btn-primary" })
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">All Classes</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Class Name</th>
                            <th>Subject</th>
                            <th>Teacher</th>
                            <th>Room</th>
                            <th>Time</th>
                            <th>Students</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var classItem in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@classItem.Name</strong>
                                    @if (!string.IsNullOrEmpty(classItem.Description))
                                    {
                                        <br><small class="text-muted">@classItem.Description</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@classItem.Subject</span>
                                </td>
                                <td>
                                    @if (classItem.Teacher != null)
                                    {
                                        @classItem.Teacher.FirstName @classItem.Teacher.LastName
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Teacher</span>
                                    }
                                </td>
                                <td>@classItem.Room</td>
                                <td>@classItem.ClassTime</td>
                                <td>
                                    <span class="badge bg-secondary">@classItem.Students.Count</span>
                                </td>
                                <td>
                                    <span class="badge bg-@(classItem.IsActive ? "success" : "danger")">
                                        @(classItem.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-outline-primary btn-sm" onclick="editClass(@classItem.Id)">
                                            <i class="fas fa-edit"></i> Edit
                                        </button>
                                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="deleteClass(@classItem.Id)">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-chalkboard fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No Classes Found</h5>
                <p class="text-muted">Create your first class to get started.</p>
            </div>
        }
    </div>
</div>
